<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NoInternetTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#616161</item>
        <item name="colorPrimaryDark">#212121</item>
    </style>

    <style name="BaseLoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textColorHint">@color/text_primary_inverted_dim</item>
        <item name="colorControlNormal">@color/text_primary_inverted_dim</item>
        <item name="colorControlActivated">@color/text_primary_inverted</item>
        <item name="textColorError">?attr/colorAccent</item>
        <item name="android:windowBackground">@drawable/market</item>
    </style>

    <style name="LoginTheme" parent="BaseLoginTheme"></style>

    <style name="PrimaryCheck">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyCardView" parent="@style/CardView.Light">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@anim/lift_up</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.XSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextAppearance.XSmall.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.XSmall.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.XSmall.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Small.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Small.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Small.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small.Dim.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.XMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Medium.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Medium.Light.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Medium.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.XMedium.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Medium.Light.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Large.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Large.Label.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Large.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="ContentImageBadgeTitle" parent="AppTheme">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ContentImageBadgeText" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ContentMainBadgeTitle" parent="AppTheme">
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TitleBadgeText" parent="AppTheme">
        <item name="android:textColor">#adafb1</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">#adafb1</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WishButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#666</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customSpinnerTheme" parent="AppTheme">
        <item name="colorControlNormal">#eaeaea</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5E35B1</item>
        <item name="android:textColorPrimary">#311B92</item>
        <item name="android:background">#B39DDB</item>
    </style>
    <!-- Regular themes -->
    <style name="Theme.LightTheme" parent="Theme.AppCompat">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>















    <style name="Theme.SettingsTheme" parent="Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <item name="android:windowBackground">@null</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="colorPrimary">@color/primary_color</item>

    </style>

    <style name="Theme.SettingsTheme.Dark" parent="Theme.AppCompat">

        <!-- customize the color palette -->
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="Theme.SettingsTheme.Black" parent="Theme.AppCompat">

        <!-- customize the color palette -->
        <item name="android:windowBackground">@null</item>

        <item name="listBackground">@drawable/list_bg</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>


    <style name="Theme.DarkTheme" parent="Theme.AppCompat">

        <!-- customize the color palette -->
        <item name="searchBackground">@drawable/card_bg_elevate</item>

        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="Theme.BlackTheme" parent="Theme.AppCompat">

        <!-- customize the color palette -->
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="progressBackgroundColor">@color/black</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
</resources>
