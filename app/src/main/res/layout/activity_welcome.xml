<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/market"
    tools:context=".ofidyApp.ui.WelcomeActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_height"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/padding_large"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo"
            android:transitionName="@string/splash_transition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome"
            android:textAppearance="@style/TextAppearance.Large.Label.Inverse"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ofidy.com is a Global online shopping mall designed to assist buyers purchase products made in Africa from different countries around the world and get it delivered to them. With Ofidy.com, sellers from Africa can sell their products in Hong Kong, Mainland China, UK, Mainland Europe, USA, Canada, and the United Arab Emirates (UAE)."
            android:textAppearance="@style/TextAppearance.Medium.Inverse"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                app:fb_radius="8dp"
                app:fb_textGravity="center"
                app:fb_textSize="18sp"
                app:fb_text="Start Shopping"
                app:fb_textColor="@color/text_primary"
                app:fb_defaultColor="@color/white"
                app:fb_focusColor="@color/text_primary_inverted"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/sign_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/padding_large"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                app:fb_radius="8dp"
                app:fb_textGravity="center"
                app:fb_textSize="18sp"
                app:fb_text="Login/Register"
                app:fb_textColor="@color/text_primary"
                app:fb_defaultColor="@color/white"
                app:fb_focusColor="@color/text_primary_inverted"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>