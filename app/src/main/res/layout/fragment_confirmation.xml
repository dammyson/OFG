<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ofidyApp.ui.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Medium.Label"
            android:text="Order Summary"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginBottom="@dimen/padding_large"
            android:text="Total: NGN50000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label"
            android:layout_marginTop="@dimen/padding_large"
            android:text="Billing Address"/>

        <TextView
            android:id="@+id/billing_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginTop="@dimen/padding_inline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label"
            android:layout_marginTop="@dimen/padding_large"
            android:text="Shipping Address"/>

        <TextView
            android:id="@+id/shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginTop="@dimen/padding_inline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label"
            android:layout_marginTop="@dimen/padding_large"
            android:text="Shipping Method"/>

        <TextView
            android:id="@+id/shipping_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginTop="@dimen/padding_inline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label"
            android:layout_marginTop="@dimen/padding_large"
            android:text="Payment Method"/>

        <TextView
            android:id="@+id/payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginTop="@dimen/padding_inline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            android:layout_marginTop="32dp"
            android:text="By clicking 'PROCEED' you have read and accept the Terms and Conditions"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:fb_radius="0dp"
            app:fb_textGravity="center"
            app:fb_textSize="@dimen/text_size_medium"
            app:fb_text="PROCEED"
            app:fb_textColor="#ffffff"
            app:fb_defaultColor="@color/colorPrimary"
            app:fb_focusColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>